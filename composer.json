{
  "name": "chrisvogt/wowchar-info",
  "description": "WoW character viewer in CakePHP.",
  "type": "project",
  "keywords" : [
    "world of warcraft",
    "cakephp app"
  ],

  "homepage" : "http://wowchar.info",
  "license" : "MIT",
  "authors": [
    {
      "name": "Chris Vogt",
      "homepage": "https://www.chrisvogt.me"
    }
  ],
  "require" : {
    "php" : "~5.4",
    "composer/installers" : "~1.0",
    "cakephp/cakephp" : "~2.0",
    "friendsofcake/crud" : "3.*",
    "josegonzalez/dotenv": "0.3.*",
    "ad7six/dsn": "0.3.*"
  },
  "require-dev": {
    "cakephp/debug_kit" : "2.2.*",
    "phpunit/phpunit": "3.7.32"
  },
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "heroku": {
      "framework": "cakephp2",
      "document-root": "webroot",
      "index-document": "index.php"
    }
  }
}
